&-lightbox {
  position: fixed;
  top: 0;
  left: 0;
  overflow-y: scroll;
  height: 100vh;
  width: 100vw;
  background-color: rgba($dark, .7);
  text-align: center;
  img {
    max-width: 100%;
    +above(m) {
      max-width: 90%;
    }
  }
  i {
    position: absolute;
    top: $vspacing;
    right: $hspacing;
    font-size: 5rem;
    cursor: pointer;
    color: $light;
  }
  &--video {
    iframe {
      margin: $spacing*2;
      width: 100%;
      height: auto;
      +above(m) {
        width: 640px;
        height: 360px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -180px 0 0 -320px;
      }
    }
  }
}
